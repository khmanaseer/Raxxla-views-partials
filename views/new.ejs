<%- include("partials/header.ejs") %>


<div id="galleryBody">
	<div class="container">
		<div id="newGallery">
				<h3 class="text-center">
					Adding new Photo
				</h3>
			<!-- Post Form -->
			<form action="/Gallery" method="POST">
				<div class="form-group" style="padding-bottom:5px;">
					<input type="text" class="form-control" placeholder="Title" name="Gallery[Title]">
				</div>
				<div class="form-group" style="padding-bottom:5px;">
					<input type="text" class="form-control" placeholder="URL" name="Gallery[img]">
				</div>
				 <div class="form-group" style="padding-bottom:5px;">
					<textarea class="form-control" rows="4" name="Gallery[description]"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-outline-secondary">Upload</button>
				</div>
			</form>
		</div>	
	</div>
</div>
